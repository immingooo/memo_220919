<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.dao.PostDAO">
 	<select id="selectPostListTest" resultType="map">
 		SELECT
 			*
 		FROM
 			`post`
 	</select>
 	
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{subject}
 			, #{content}
 			, #{imagePath}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<!-- userId는 인덱스를 추가해주는게 좋음 -->
 	<select id="selectPostListByUserId" parameterType="int" resultType="com.memo.post.Post">
 		SELECT
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
 	</select>
 	
 	<select id="selectPostByPostIdUserId" parameterType="map" resultType="com.memo.post.Post">
 		SELECT
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
			AND `id` = #{postId}
 	</select>
 	
 	<update id="updatePostByPostIdUserId" parameterType="map">
 		UPDATE `post`
 		SET 
 			`subject` = #{subject}
 			, `content` = #{content}
 			, `updatedAt` = NOW()
 			<!-- imagePath가 있을 때에만 수정한다. 기존에 업로드안했을 때, 업로드에 실패했을 때 -->
 			<if test="imagePath != null">
 			, `imagePath` = #{imagePath}
 			</if>
 		WHERE
 			`id` = #{postId}
 			AND `userId` = #{userId}
 	</update>
 </mapper>